<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MCLauncher.MainWindow"
        Title="MCLauncher"
        Icon="avares://MCLauncher/ressources/sources/logo.ico"
        MinWidth="900" MinHeight="600"
        WindowState="Maximized"
        TransparencyLevelHint="AcrylicBlur"
        Background="DimGray"
        ExtendClientAreaToDecorationsHint="True">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Bannière du haut (titre + boutons) -->
        <Border Background="#80000000" Height="60" Padding="10" CornerRadius="0" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- New instance -->
                <Button Background="#80000000"
                        Opacity="0.9"
                        CornerRadius="8"
                        Height="40"
                        VerticalContentAlignment="Center"
                        Padding="16,0"
                        Margin="0,0,10,0"
                        Grid.Column="0"
                        Click="NewInstanceButton_Click"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Spacing="6">
                        <Image Source="avares://MCLauncher/ressources/icons/plus.png" Height="32" />
                        <TextBlock Text="New instance" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Folders -->
                <Button Background="#80000000"
                        Opacity="0.9"
                        CornerRadius="8"
                        Height="40"
                        VerticalContentAlignment="Center"
                        Padding="16,0"
                        Margin="0,0,10,0"
                        Grid.Column="1"
                        Click="FoldersButton_Click"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Spacing="6">
                        <Image Source="avares://MCLauncher/ressources/icons/folder.png" Height="32" />
                        <TextBlock Text="Folders" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Logo + App Name -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                            HorizontalAlignment="Center" Spacing="10">
                    <Image Source="avares://MCLauncher/ressources/sources/logo.png" Width="40" Height="40" />
                    <TextBlock Text="MCLauncher" FontSize="24" Foreground="White" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Settings -->
                <Button Background="#80000000"
                        Opacity="0.9"
                        CornerRadius="8"
                        Height="40"
                        VerticalContentAlignment="Center"
                        Padding="16,0"
                        Margin="0,0,10,0"
                        Grid.Column="3"
                        Click="SettingsButton_Click"
                        HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Spacing="6">
                        <Image Source="avares://MCLauncher/ressources/icons/settings.png" Height="32" />
                        <TextBlock Text="Settings" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Accounts -->
                <Button Background="#80000000"
                        Opacity="0.9"
                        CornerRadius="8"
                        Height="40"
                        VerticalContentAlignment="Center"
                        Padding="16,0"
                        Grid.Column="4"
                        Click="AccountsButton_Click"
                        HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Spacing="6">
                        <Image Source="avares://MCLauncher/ressources/icons/users.png" Height="32" />
                        <TextBlock Text="Accounts" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>


        <Border Grid.Row="1"
                Background="#80000000">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Instances"
                           FontWeight="Bold"
                           FontSize="18"
                           Margin="14, 0" />
                <ListBox Grid.Row="1"
                         x:Name="InstancesListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionMode="Single">
                    <ListBoxItem>
                        <Border Background="#3300C853" CornerRadius="8" Padding="15" Margin="0">
                            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                <Image Source="avares://MCLauncher/ressources/sources/logo.png" Width="40"
                                       Height="40" />
                                <StackPanel Orientation="Vertical" Width="200">
                                    <TextBlock Text="Mon Instance" FontWeight="Bold" FontSize="16" />
                                    <TextBlock Text="1.20.4 • Vanilla" FontSize="13" Foreground="#FFB0B0B0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Lancer" Margin="10" Padding="10,8"
                                            Background="#00FF00" Foreground="White" CornerRadius="8" Click="Launch" />
                                    <Button Content="Modifier" Margin="10" Padding="10,8"
                                            Background="#0000FF" Foreground="White" CornerRadius="8" Click="Delete" />
                                    <Button Content="Supprimer" Margin="10" Padding="10,8"
                                            Background="#FF0000" Foreground="White" CornerRadius="8" Click="Delete" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </ListBoxItem>
                </ListBox>
            </Grid>
        </Border>


        <!-- Bannière du bas (copyright, partenaires) -->
        <Border Grid.Row="2" Background="#80000000" VerticalAlignment="Bottom" Height="55" Padding="10"
                CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                            HorizontalAlignment="Left" Spacing="10">
                    <Image Source="avares://MCLauncher/ressources/icons/console.png" Width="24" Height="24" />
                    <TextBlock x:Name="StatusText" Text="Prêt à lancer..." Foreground="White" FontSize="14"
                               HorizontalAlignment="Left" VerticalAlignment="Center" />
                </StackPanel>
                <!--<StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right"
                            VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="With our partner " FontSize="14" Foreground="White" VerticalAlignment="Center" />
                    <Button Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Center"
                            Click="OpenAzurhosts">
                        <Image Source="avares://MCLauncher/ressources/sources/azurhosts.png" Height="32" />
                    </Button>
                </StackPanel>-->
            </Grid>
        </Border>
    </Grid>
</Window>